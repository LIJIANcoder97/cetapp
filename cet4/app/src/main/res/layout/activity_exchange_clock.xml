<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="top.mirrorer.lijian.exchangeClockActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name:"/>
            <EditText
                android:id="@+id/exchange_name"
                android:layout_width="200dp"
                android:text="none"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:"/>
            <EditText
                android:id="@+id/exchange_year"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="2018"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M:"/>
            <EditText
                android:id="@+id/exchange_month"
                android:layout_width="30dp"
                android:text="5"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D:"/>
            <EditText
                android:id="@+id/exchange_date"
                android:layout_width="30dp"
                android:text="23"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:"/>
            <EditText
                android:id="@+id/exchange_hour"
                android:layout_width="30dp"
                android:text="10"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m:"/>
            <EditText
                android:id="@+id/exchange_miute"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="00"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/exchange_chose"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:checked="false"
            android:text="启用计时"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/exchange_button"
            android:layout_margin="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:background="@drawable/balck_shape"/>
    </LinearLayout>

</RelativeLayout>
