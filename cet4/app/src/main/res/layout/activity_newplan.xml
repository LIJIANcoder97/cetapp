<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="top.mirrorer.lijian.NewplanActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/return_clock"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:background="#fff"
            android:text="返回"/>

        <TextView

            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="为当前计时新建一个计划"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划"
                android:textColor="@color/Black"/>
            <EditText
                android:id="@+id/plan_name"
                android:text="plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textColor="@color/Black"/>
            <EditText
                android:text="place"
                android:id="@+id/plan_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <Button
            android:id="@+id/newaplan_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="确认"
            android:background="@drawable/balck_shape"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滑动日历选择时间"
        android:textColor="@color/colorPrimaryDark"/>
    <CalendarView
        android:id="@+id/plan_cal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        ></CalendarView>
</LinearLayout>
