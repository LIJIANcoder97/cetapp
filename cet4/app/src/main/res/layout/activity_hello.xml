<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PapayaWhip_back"
    android:orientation="vertical"
    tools:context="top.mirrorer.lijian.Activity_hello">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Welcome"
            android:textSize="20dp"
            android:textColor="#777"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="FRIEND"
            android:textSize="50dp"

            android:textColor="@color/Black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
            android:text="Time and tide wait for no man"
            android:textColor="@color/Black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="20dp"
            android:textColor="@color/Black"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/hello_name"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@color/PapayaWhip_back"/>
            <include layout="@layout/line"></include>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <CheckBox
            android:id="@+id/hello_siji"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:checked="true"
            android:text="四级"
            android:textSize="20dp"/>
        <CheckBox
            android:id="@+id/hello_liuji"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="六级"
            android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/hello_button"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:background="@drawable/shape_button"/>
</LinearLayout>
